generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model player_scores {
  id        BigInt  @id @default(autoincrement())
  player_id BigInt
  score     BigInt
  players   User @relation(fields: [player_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "fk_player")

  @@index([score], map: "player_scores_score")
  @@index([player_id], map: "player_scores_player_id")
}

model User {
  id            BigInt          @id @default(autoincrement())
  name          String          
  email         String
  password      String
  wallet        String
  player_scores player_scores[]
}